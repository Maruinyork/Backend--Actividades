doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Formulario para agregar productos
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  body
    a(href='/productos' class="text-dark fw-bold mx-3") Ver lista
    h3(class="mx-3 mt-4") Ingrese Producto
    form(action='/productos' method='POST' class="row g-3 mx-2 mt-4 form-horizontal bg-light")
      div(class="form-group")
        label(for='title' class='col-sm-4  control-label fw-bold') Nombre:
        div(class="col-sm-4 col-md-6")
           input(type='text' name='title' required='' class="form-control")
      div(class="form-group")
        label(for='price' class='col-sm-4 control-label fw-bold') Precio:
        div(class="col-sm-4 col-md-6")
           input(type='text' name='price' required='' class="form-control")
      div(class="form-group")
        label(for='thumbnail' class='col-sm-4 control-label fw-bold') Imagen:
        div(class="col-sm-4 col-md-6")
           input(type='text' name='thumbnail' required='' class="form-control")
      div(class="col-12")
        button(type='submit' class="btn btn-dark mb-3")  Agregar

      <!-- JavaScript Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>