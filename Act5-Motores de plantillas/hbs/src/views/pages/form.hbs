
<div class="container" style="margin-top:50px">
    <h2>Agregar Producto</h2>
    <form action="/productos" method="POST">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10 col-md-4">
      <input type="text" class="form-control " id="inputName" name="title" placeholder="Nombre del producto">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPass" class="col-sm-2 col-form-label">Precio</label>
    <div class="col-sm-10 col-md-4">
      <input type="number" class="form-control" id="inputPass" name="price" placeholder="Precio del producto">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputThumb" class="col-sm-2 col-form-label">Imagen</label>
    <div class="col-sm-10 col-md-4">
      <input type="text" class="form-control" id="inputThumb" name="thumbnail" placeholder="URL del producto">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 col-md-4">
      <button type="submit" class="btn btn-dark btn-sm mt-4">Agregar</button>
    </div>
  </div>
</form>
</div>
